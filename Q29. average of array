#include <stdio.h>
int main() {
    int n;
    float sum = 0;
    printf("Enter the size of array: ");
    scanf("%d", &n);
    int arr[n];
    for(int i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }
    for(int i = 0;i < n;i++) {
        sum  += arr[i];
    }
    float average = sum/n;
    printf("average of your array is:%f", average);
    return 0;
}
